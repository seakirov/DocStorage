@{
    ViewBag.Title = "Upload";
}

<h2>Загрузить документ</h2>

@using (Html.BeginForm("Upload", "Document", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    
    @Html.ValidationSummary(true)
    

    <div class="form-group">
        <input type="file" name="upload" class="col-sm-10"/>
    </div>
    <div class="form-group">
        <div class="col-sm-10">
            <input type="submit" class="btn btn-success" value="Загрузить документ" />
            @Html.ActionLink("Назад к списку", "Index", routeValues: null, htmlAttributes:  new { type="button", @class="btn btn-default" })
        </div>
    </div>
    
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
