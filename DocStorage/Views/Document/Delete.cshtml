@model DocStorage.Document

@{
    ViewBag.Title = "Удаление";
}

<h2>Удаление</h2>

<h3>Вы уверены, что хотите удалить этот документ?</h3>

@using (Html.BeginForm("Delete", "Document", FormMethod.Post, new { @class = "form-horizontal" })){
    

    @Html.ValidationSummary(true)
    <div class="form-group">
        @Html.Label("Название документа", new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.DocName,new { @class = "col-sm-6 form-control-static" })
            </div>
    </div>

    <div class="form-group">
        @Html.Label("Дата создания", new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Created,new { @class = "col-sm-6 form-control-static" })
            </div>
    </div>

    <div class="form-group">
        @Html.Label("Путь к файлу", new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Path,new { @class = "col-sm-6 form-control-static" })
            </div>
    </div>

    <div class="form-group">
        @Html.Label("Владелец", new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.User.UserName, new { @class = "col-sm-6 form-control-static" })
            </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <input type="submit" class="btn btn-success" value="Удалить" />
            @Html.ActionLink("Назад к списку", "Index", routeValues: null, htmlAttributes:  new { type="button", @class="btn btn-default" })
        </div>
    </div>

}


